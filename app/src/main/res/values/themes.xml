<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shoppy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#44a5fb</item>
        <item name="colorPrimaryVariant">#44a5fb</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Shopuin.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text16ActiveMedium500">
        <item name="android:fontFamily">@font/roboto_medium_500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#44a5fb</item>
    </style>

    <style name="Text16ActiveRegular400">
        <item name="android:fontFamily">@font/roboto_regular_400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#44a5fb</item>
    </style>

</resources>